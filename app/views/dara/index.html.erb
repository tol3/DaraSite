        <div aria-labelledby="afterparty-tab" class="tab-pane fade" id="afterparty" role="tabpanel">

          <%= render :partial => 'index_party', :locals => { :party => @after_party, :url => "party" } %>
        </div>

      </div>

    </div>

  </div>

