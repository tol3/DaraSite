<% title @head || "News & Entertainment" %>

<div class="row pages">
  <% if @news.count != 0 %>
  <div class="col-md-9 col-sm-9">

    <div class="row">
      <div class="content-head">
        <span class="content">
          <%= @head %>
        </span>
      </div>
    </div>

    <div class="row box-shadow news-card">
      <div class="col-md-6 no-pad">
        <%= link_to image_tag(@first.cover.url(:mini)), "/#{@url}/#{@first.id}" %>
      </div>

      <div class="col-md-6">
        <div class="row title">
          <h2><%= link_to @first.title, "/#{@url}/#{@first.id}" %></h2>
          <p> by <%= @first.post_by %></p>
        </div>
        <div class="row content">
          <p>
            <%= truncate( @first.teaser,
                      length: 135,
                      separator: ' ',
                      omission: '... ') {
                        link_to "อ่านต่อ", "/#{@url}/#{@first.id}"
                    } %>
          </p>
        </div>
        <div class="row foot">
          <span class="social">
            <div class="ssk-group" data-url="<%= "#{request.original_url}/#{@first.id}" %>" data-text="<%= "#{@first.title}" %>" >
              <a class="ssk ssk-facebook ssk-xs" href=""></a>
              <a class="ssk ssk-twitter ssk-xs" href=""></a>
              <a class="ssk ssk-google-plus ssk-xs" href=""></a>
              <a class="ssk ssk-pinterest ssk-xs" href=""></a>
            </div>
          </span>
          <p> Watch: <%= @first.impressionist_count %> </p>
        </div>
      </div>
    </div>

    <div class="row">
<!-- xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx -->
      <% @news[1..@news.count].each do |x| %>

      <div class="col-md-4 col-sm-4 sm-pad">
        <div class="col-md-12 box-shadow news-card news-small no-pad">
          <div class="col-md-12">
            <div class="row title">
              <h2><%= link_to x.title, "/#{@url}/#{x.id}" %></h2>
              <p> by <%= x.post_by %></p>
            </div>

            <div class="row card-index-img">
              <%= link_to image_tag(x.cover.url(:mini)), "/#{@url}/#{x.id}" %>
            </div>
            <div class="row content">
              <p><%= truncate(x.teaser,
                      length: 80,
                      separator: ' ',
                      omission: '... ') {
                        link_to "อ่านต่อ", "/#{@url}/#{x.id}"
                    } %>
              </p>
            </div>
            <div class="row foot">
              <span class="social">
                <div class="ssk-group" data-url="<%= "#{request.original_url}/#{x.id}" %>" data-text="<%= "#{x.title}" %>">
                  <a class="ssk ssk-facebook ssk-xs" href=""></a>
                  <a class="ssk ssk-twitter ssk-xs" href=""></a>
                  <a class="ssk ssk-google-plus ssk-xs" href=""></a>
                  <a class="ssk ssk-pinterest ssk-xs" href=""></a>
                </div>
              </span>
              <p> Watch: <%= number_to_human(x.impressionist_count, :format => '%n%u', :units => { :thousand => 'k' }) %></p>
            </div>
          </div>
        </div>
      </div>

      <% end %>
<!-- xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx -->
    </div>

    <div class="row">
      <div class="col-md-12">
        <%= paginate @news %>
      </div>
    </div>

  </div>
  <% end %>

<!-- xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx -->
  <div class="col-md-3 col-sm-3">
    <div class="col-md-12">
      <div class="row">
        <div class="col-md-12">
          <%= link_to image_tag("450.png", :class => "ads") , "#" %>
        </div>
      </div>
      <div class="row">
        <div class="col-md-12 hidden-xs">
          <%= link_to image_tag("450_l.png", :class => "ads") , "#" %>
        </div>
      </div>
      <div class="row">
        <div class="col-md-12">
          <%= link_to image_tag("450.png", :class => "ads") , "#" %>
        </div>
      </div>
    </div>
  </div>
<!-- xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx -->
</div>

<div class="row">
  <div class="col-md-12">
    <%= link_to image_tag("1500_s.png", :class => "ads") , "#" %>
  </div>
</div>

