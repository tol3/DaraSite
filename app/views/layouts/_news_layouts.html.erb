<% title @head || "News & Entertainment" %>

<div class="row pages">
  <% if @news.count != 0 %>
  <div class="col-md-9 col-sm-9">

    <div class="row">
      <div class="content-head">
        <span class="content">
          <%= @head %>
        </span>
      </div>
    </div>

    <div class="row box-shadow news-card">
      <div class="col-md-6 no-pad">
        <%= link_to image_tag(@first.cover.url(:mini)), "/#{@url}/#{@first.id}" %>
      </div>

      <div class="col-md-6">
        <div class="row title">
          <h2><%= link_to @first.title, "/#{@url}/#{@first.id}" %></h2>
          <p><%= @first.post_by %></p>
        </div>
        <div class="row content">
          <p>
            <%= @first.teaser %>
          </p>
        </div>
        <div class="row foot">
          <p>Watch: <%= @first.impressionist_count %></p>
        </div>
      </div>
    </div>

    <div class="row">
<!-- xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx -->
      <% @news[1..@news.count].each do |x| %>

      <div class="col-md-4 col-sm-4 sm-pad">
        <div class="col-md-12 box-shadow news-card news-small no-pad">
          <div class="col-md-12">
            <div class="row title">
              <h2><%= link_to x.title, "/#{@url}/#{x.id}" %></h2>
              <p><%= x.post_by %></p>
            </div>

            <div class="row card-index-img">
              <%= link_to image_tag(x.cover.url(:mini)), "/#{@url}/#{x.id}" %>
            </div>
            <div class="row content">
              <%= x.teaser %>
            </div>
            <div class="row foot">
              <p>Watch: <%= x.impressionist_count %></p>
            </div>
          </div>
        </div>
      </div>

      <% end %>
<!-- xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx -->
    </div>

    <div class="row">
      <div class="col-md-12">
        <%= paginate @news %>
      </div>
    </div>

  </div>
  <% end %>

<!-- xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx -->
