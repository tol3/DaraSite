<% title @head || "News & Entertainment" %>

<div class="row">
  <% if @party.count != 0 %>
  <div class="col-md-9">

    <div class="row">
      <div class="content-head">
        <span class="content">
          <%= @head %>
        </span>
      </div>
    </div>

    <div class="row box-shadow row-party">
      <div class="col-md-7 party-cover">
        <%= link_to image_tag(@first.cover.url(:mini)), "/#{@url}/#{@first.id}" %>
      </div>
      <div class="col-md-5 party-title">
        <h2><%= link_to @first.title, "/#{@url}/#{@first.id}" %></h2>
        <p class="day"><%= @first.day.strftime("%d, %B %Y") %></p>
        <p class="content">

          <%= truncate( @first.description,
                      length: 200,
                      separator: ' ',
                      omission: '... ') {
                        link_to "อ่านต่อ", "/#{@url}/#{@first.id}"
                    } %>
        </p>
      </div>

      <div class="col-md-12 party-foot">

        <span class="social">
          <div class="ssk-group" data-url="<%= "#{request.original_url}#{@url}/#{@first.id}" %>" data-text="<%= "#{@first.title}" %>">
            <p>Share it : </p>
            <a class="ssk ssk-facebook ssk-xs" href=""></a>
            <a class="ssk ssk-twitter ssk-xs" href=""></a>
            <a class="ssk ssk-google-plus ssk-xs" href=""></a>
            <a class="ssk ssk-pinterest ssk-xs" href=""></a>
          </div>
        </span>

      </div>
    </div>

    <div class="row box-shadow">

      <div class="col-md-12 party-wrap">

        <% @party[1..@party.count].each do |x| %>
        <div class="col-md-3 party-card">
          <div class="col-md-12 box-shadow">
            <div class="row">
              <div class="day">
                <p><%= x.day.strftime("%d") %></p>
                <p><%= x.day.strftime("%b") %></p>
              </div>

              <%= link_to image_tag(x.poster.url(:mini), :class => "party-card-img"), "/#{@url}/#{x.id}" %>
            </div>
            <div class="row content">
              <div class="col-md-12 party-card-bot">
                <h4 class="title"><%= link_to x.title, "/#{@url}/#{x.id}" %></h4>
                <p class="sub-title"><%= x.location %></p>
                <p class="content-p">

                  <%= truncate( x.description,
                      length: 50,
                      separator: ' ',
                      omission: '... ') {
                        link_to "อ่านต่อ", "/#{@url}/#{x.id}"
                    } %>
                </p>
              </div>
            </div>
          </div>
        </div>
        <% end %>

        <div class="col-md-12">
          <%= paginate @party %>
        </div>
      </div>

    </div>
  <% if @last %>
    <div class="row box-shadow">
      <div class="content-head">
        <span class="content gallery">
          Previous Party Gallery
        </span>
      </div>
    </div>

    <div class="row">

      <div class="col-md-12 box-shadow gallery-wrap">

        <% @last.each do |x| %>

        <div class="col-md-4 gallery-card">
          <div class="col-md-12 box-shadow">
            <div class="row">
              <%= link_to image_tag(x.cover.url(:mini), :class => "gallery-card-img"), "/#{@url}/#{x.id}" %>
            </div>
            <div class="row content">
              <div class="col-md-12 gallery-card-bot">
                <h4 class="title"><%= link_to x.title, "/#{@url}/#{x.id}" %></h4>
                <p class="sub-title"><%= x.location %></p>
                <p class="content-p"><%= x.day.strftime("%d %B %Y") %></p>
              </div>
            </div>
          </div>
        </div>

        <%end%>

        <div class="col-md-12">
          <%= link_to "More +", after_party_path %>
        </div>
      </div>

    </div>
    <% end %>

  </div>
  <% end %>

  <div class="col-md-3 col-sm-3">
    <div class="col-md-12">
      <div class="row">
        <div class="col-md-12">
          <% if @ads_box[0] != nil %>
            <%= link_to image_tag(@ads_box[0].image.url(:s2), :class => "ads") , @ads_box[0].link %>
          <% else %>
            <%= link_to image_tag("450.png", :class => "ads") , "#" %>
          <% end %>
        </div>
      </div>
      <div class="row">
        <div class="col-md-12 hidden-xs">
          <% if @ads_lg != nil %>
            <%= link_to image_tag(@ads_lg.image.url(:s4), :class => "ads") , @ads_lg.link %>
          <% else %>
            <%= link_to image_tag("450_l.png", :class => "ads") , "#" %>
          <% end %>
        </div>
      </div>
      <div class="row">
        <div class="col-md-12">
          <% if @ads_box[1] != nil %>
            <%= link_to image_tag(@ads_box[1].image.url(:s2), :class => "ads") , @ads_box[1].link %>
          <% else %>
            <%= link_to image_tag("450.png", :class => "ads") , "#" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>

</div>

<div class="row">
  <% if @ads_bottom != nil %>
    <%= link_to image_tag(@ads_bottom.image.url(:s1), :class => "ads") , @ads_bottom.link %>
  <% else %>
    <%= link_to image_tag("1500_s.png", :class => "ads") , "#" %>
  <% end %>
</div>