        </li>
        <li role="presentation">
          <a aria-controls="afterparty" aria-expanded="false" data-toggle="tab" href="#afterparty" id="afterparty-tab" role="tab">After Party</a>
        </li>

      </ul>
      <div class="tab-content">
        <div aria-labelledby="calendar-tab" class="tab-pane fade active in" id="calendar" role="tabpanel">

            <%= render :partial => 'index_party', :locals => { :party => @calendar, :url => "party" } %>

        </div>
        <div aria-labelledby="chill-tab" class="tab-pane fade" id="chill" role="tabpanel">
          <%= render :partial => 'index_party', :locals => { :party => @chill, :url => "party" } %>

