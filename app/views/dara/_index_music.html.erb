<% if music.count != 0 %>
  <% music.each do |m| %>

    <div class="col-md-12 music-tab no-pad" style="margin-bottom: 10px;">

      <div class="col-md-12 no-pad index-music-cards">
        <div class="col-md-12 no-pad index-music-cards-top box-shadow">
          <h3><%= link_to m.title, "#{url}/#{m.id}" %></h3>
        </div>

        <div class="col-md-12 box-shadow index-music-cards-middle">
          <p class="watch">
            <i class="fa fa-user"></i>
            <%= number_to_human(m.impressionist_count, :format => '%n%u', :units => { :thousand => 'k' }) %>
          </p>
          <span class="social">
            <div class="ssk-group" data-url="<%= "#{request.original_url}/#{m.id}" %>" data-text="<%= "#{m.title}" %>" >
              <a class="ssk ssk-facebook ssk-xs" href=""></a>
              <a class="ssk ssk-twitter ssk-xs" href=""></a>
              <a class="ssk ssk-google-plus ssk-xs" href=""></a>
              <a class="ssk ssk-pinterest ssk-xs" href=""></a>
            </div>
          </span>
        </div>

        <div class="col-md-12 box-shadow no-pad index-music-cards-bot">
          <div class="col-md-6 box-shadow no-pad">
            <%= link_to image_tag(m.cover.url(:mini)), "#{url}/#{m.id}" %>
          </div>
          <div class="col-md-6">
            <h3> <%= m.title %> </h3>
            <p> <%= truncate( m.teaser,
                      length: 57,
                      separator: ' ',
                      omission: '... ') {
                        link_to "อ่านต่อ", "/#{url}/#{m.id}"
                    } %> </p>
          </div>
          <span class="tri"></span>
        </div>
      </div>

    </div>

  <% end %>
<% end %>
